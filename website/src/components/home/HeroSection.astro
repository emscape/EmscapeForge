---
import { Image } from 'astro:assets';
import config from '../../config';
---

<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">
        Welcome to <span class="highlight">EmscapeForge</span>
      </h1>
      <p class="hero-subtitle">
        Knitting code, crafting concepts, and occasionally setting the internet on fireâ€”welcome to my digital forge.
      </p>
      <div class="hero-buttons">
        <a href="/projects" class="button primary">View Projects</a>
        <a href="/about" class="button secondary">About Me</a>
      </div>
    </div>
    <div class="hero-image">
      <!-- Placeholder for hero image -->
      <div class="image-placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
        </svg>
        <p>Hero Image</p>
      </div>
    </div>
  </div>
  
  <div class="hero-background">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
    <div class="shape shape-3"></div>
  </div>
</section>

<style lang="scss">
  .hero-section {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding: 2rem 0;
  }
  
  .hero-content {
    max-width: 600px;
    z-index: 2;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
    margin-bottom: 1rem;
    
    .highlight {
      color: var(--color-primary);
      position: relative;
      
      &::after {
        content: '';
        position: absolute;
        bottom: 0.1em;
        left: 0;
        width: 100%;
        height: 0.2em;
        background-color: var(--color-accent);
        opacity: 0.3;
        z-index: -1;
      }
    }
  }
  
  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.5rem);
    margin-bottom: 2rem;
    opacity: 0.8;
  }
  
  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    
    .button {
      display: inline-block;
      padding: 0.8rem 1.5rem;
      border-radius: var(--border-radius-medium);
      font-weight: 500;
      text-decoration: none;
      transition: transform var(--transition-fast), box-shadow var(--transition-fast);
      
      &:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-medium);
      }
      
      &.primary {
        background-color: var(--color-primary);
        color: white;
      }
      
      &.secondary {
        background-color: transparent;
        color: var(--color-text);
        border: 2px solid var(--color-primary);
      }
    }
  }
  
  .hero-image {
    position: relative;
    z-index: 2;
    
    .image-placeholder {
      width: 300px;
      height: 300px;
      background-color: rgba(0, 0, 0, 0.05);
      border-radius: var(--border-radius-large);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: var(--color-text);
      opacity: 0.7;
      
      .dark-mode & {
        background-color: rgba(255, 255, 255, 0.05);
      }
      
      svg {
        margin-bottom: 1rem;
      }
    }
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    overflow: hidden;
  }
  
  .shape {
    position: absolute;
    border-radius: 50%;
    
    &-1 {
      width: 300px;
      height: 300px;
      background-color: var(--color-primary);
      opacity: 0.1;
      top: -100px;
      right: -100px;
    }
    
    &-2 {
      width: 500px;
      height: 500px;
      background-color: var(--color-secondary);
      opacity: 0.1;
      bottom: -200px;
      left: -200px;
    }
    
    &-3 {
      width: 200px;
      height: 200px;
      background-color: var(--color-accent);
      opacity: 0.1;
      top: 30%;
      right: 20%;
    }
  }
  
  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
  }
  
  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
    }
    
    .hero-image {
      display: none;
    }
  }
</style>