---
// Basic Heading component - renders h1-h6 based on level prop
interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  className?: string;
}

const { level, className } = Astro.props;
const Tag = `h${level}` as const; // Dynamically set the tag type

// Basic styling based on level (can be customized further)
const levelStyles = {
  1: 'text-4xl md:text-5xl font-bold',
  2: 'text-3xl md:text-4xl font-semibold',
  3: 'text-2xl md:text-3xl font-semibold',
  4: 'text-xl md:text-2xl font-semibold',
  5: 'text-lg md:text-xl font-semibold',
  6: 'text-base md:text-lg font-semibold',
};

const baseStyle = 'text-gray-900 dark:text-white'; // Common base style
---
<Tag class:list={[baseStyle, levelStyles[level], className]}>
  <slot />
</Tag>