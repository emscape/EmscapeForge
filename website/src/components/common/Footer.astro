---
import config from '../../config';
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <a href="/">EmscapeForge</a>
        <p class="tagline">Personal website for Emily's projects and thoughts</p>
      </div>
      
      <div class="footer-links">
        <div class="footer-nav">
          <h3>Navigation</h3>
          <ul>
            {config.navigation.map((item) => (
              <li><a href={item.path}>{item.name}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-social">
          <h3>Connect</h3>
          <ul class="social-links">
            <li>
              <a href={config.social.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                </svg>
              </a>
            </li>
            <li>
              <a href={config.social.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                  <rect x="2" y="9" width="4" height="12"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
              </a>
            </li>
            <li>
              <a href={config.social.twitter} target="_blank" rel="noopener noreferrer" aria-label="Twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                </svg>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} {config.site.author}. All rights reserved.</p>
      <p class="built-with">Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a></p>
    </div>
  </div>
</footer>

<style lang="scss">
  .site-footer {
    background-color: var(--color-background);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding: 3rem 0 1.5rem;
    margin-top: 2rem;
    
    .dark-mode & {
      border-top-color: rgba(255, 255, 255, 0.1);
    }
  }
  
  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 2rem;
  }
  
  .footer-logo {
    flex: 1 1 300px;
    margin-bottom: 1.5rem;
    
    a {
      font-family: var(--font-heading);
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--color-primary);
      text-decoration: none;
    }
    
    .tagline {
      margin-top: 0.5rem;
      font-size: 0.9rem;
      color: var(--color-text);
      opacity: 0.8;
    }
  }
  
  .footer-links {
    display: flex;
    flex-wrap: wrap;
    flex: 2 1 400px;
    
    h3 {
      font-size: 1rem;
      margin-bottom: 1rem;
      color: var(--color-text);
    }
    
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    li {
      margin-bottom: 0.5rem;
    }
    
    a {
      color: var(--color-text);
      opacity: 0.8;
      text-decoration: none;
      transition: opacity 0.2s ease, color 0.2s ease;
      
      &:hover {
        opacity: 1;
        color: var(--color-primary);
      }
    }
  }
  
  .footer-nav, .footer-social {
    flex: 1 1 200px;
    margin-bottom: 1.5rem;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    
    a {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: rgba(0, 0, 0, 0.05);
      transition: background-color 0.2s ease;
      
      .dark-mode & {
        background-color: rgba(255, 255, 255, 0.05);
      }
      
      &:hover {
        background-color: var(--color-primary);
        color: white;
      }
    }
  }
  
  .footer-bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    font-size: 0.85rem;
    color: var(--color-text);
    opacity: 0.7;
    
    .dark-mode & {
      border-top-color: rgba(255, 255, 255, 0.05);
    }
    
    p {
      margin: 0.5rem 0;
    }
    
    a {
      color: var(--color-primary);
    }
  }
  
  @media (max-width: 768px) {
    .footer-content, .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
    
    .social-links {
      justify-content: center;
    }
  }
</style>